{
  "extends": ["standard", "prettier"],
  "plugins": ["node"],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "es6": true
  },
  "globals": {
    "fetch": false
  },
  "rules": {
    "no-await-in-loop": "error",
    "require-atomic-updates": "error",
    "array-callback-return": "error",
    "default-case": "error",
    "no-alert": "error",
    "no-invalid-this": "error",
    "no-console": "off",
    "node/shebang": "error"
  }
}
